<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fluffrapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fluffr"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_fluffr"
        android:supportsRtl="true"
        android:theme="@style/Theme.FluffrApp">
        <activity android:name=".chatLog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat" />
        </activity>
        
        <activity android:name=".newChat">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashBoard" />
        </activity>

        <activity android:name=".dashBoard">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chat" />
        </activity>

        <activity android:name=".createPost">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:screenOrientation="portrait"
                android:value=".dashBoard" />
        </activity>

        <activity android:name=".UserProfile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashBoard" />
        </activity>

        <activity
            android:name=".chat"
            android:screenOrientation="portrait" />

        <activity android:name=".userProfileEdit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashBoard" />
        </activity>

        <activity android:name=".userPetProfileEdit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashBoard" />
        </activity>

        <activity android:name=".base.baseActivity" />

        <activity
            android:name=".splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <activity android:name=".register.register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:screenOrientation="portrait"
                android:value=".login" />
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />







        <activity android:name=".createPet">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:screenOrientation="portrait"
                android:value=".dashBoard" />
        </activity>
        <activity android:name=".petProfile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:screenOrientation="portrait"
                android:value=".dashBoard" />
        </activity>
    </application>

</manifest>