<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_pet_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/flufrpet"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_placeholder" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_img"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.fluffrapp.utils.FTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="username" />

        <com.example.fluffrapp.utils.FTextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="7 months" />
        <com.example.fluffrapp.utils.FTextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="female" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_info"
        tools:layout_editor_absoluteX="10dp">

        <com.example.fluffrapp.utils.FTextView
            android:id="@+id/tv_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/ll_img"
            tools:layout_editor_absoluteX="10dp"
            tools:text="bio bibio bibio bibio bibio bibio bibio bibio bibio bibio bi
            o bibio bibio bibio bibio bibio bibio bibio bibio bibio bi
            o bibio bibio bibio bibio bibio bibio bibio bibio bibio bi
            o bibio bibio bibio bibio bibio bibio bibio bibio bibio bibio bibio bibio bibio bio" />
        <LinearLayout
            android:id="@+id/ll_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bio">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check"/>

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                tools:text="likes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjf" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_disikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bio">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/none"/>

            <TextView
                android:id="@+id/tv_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                tools:text="likes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjflikes are shown ehesfdsfdfdjfndjf" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>